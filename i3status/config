general {
	colors = true
	interval = 5
}

order += "disk /"
order += "load"
order += "battery 0"
order += "volume master"
order += "tztime local"

disk "/" {
	format = "%avail"
}

load {
	format = "%1min"
}

battery 0 {
	format = "%status %percentage %remaining"
	format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
	last_full_capacity = true
	integer_battery_capacity = true
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
	format = "%m-%d %H:%M"
}
